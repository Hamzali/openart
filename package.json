{
  "name": "openart",
  "version": "1.0.0",
  "repository": "https://github.com/Hamzali/openart.git",
  "description": "open source art api",
  "main": "index.js",
  "scripts": {
    "test": "export NODE_ENV=test && mocha -r ./src/tests/test-helper -R spec src/tests/**/*.test.js",
    "start": "node NODE_ENV=prod index.js",
    "predev": "mkdir data && mongod --dbpath data --fork --logpath /dev/null",
    "dev": "export NODE_ENV=dev && nodemon index.js",
    "postdev": "mongo admin --eval 'db.shutdownServer()' > /dev/null && rm -r data",
    "start-db": "mkdir data && mongod --dbpath data --fork --logpath /dev/null",
    "stop-db": "mongo admin --eval 'db.shutdownServer()' > /dev/null && rm -r data"
  },
  "author": "hamzali",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "consign": "^0.1.4",
    "express": "^4.15.2",
    "express-validator": "^3.2.0",
    "jsonwebtoken": "^7.4.0",
    "mongoose": "^4.9.6",
    "morgan": "^1.8.1",
    "pug": "^2.0.0-beta.12"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "chai-http": "^1.0.0",
    "dotenv": "^4.0.0",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0"
  }
}

extends layout.pug

block content
    
    h3.flow-text.col.s6 Forgot your password?
    
    p.grey-text Enter your email and we will send you reset password link.
        
    form(method="POST")
        div.row
            div.input-field.col.s4
                input#email.validate(type='email', name='email')
                label(for='email') Email
        
                button.btn.waves-effect.waves-light.red.lighten-2(type='submit', name='action') Submit

        span #{error}